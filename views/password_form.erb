<!DOCTYPE html>
<html>
<head>
  <style media="screen">
  .middle
  {
  position: absolute;
  margin: auto;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 300px;
  height: 200px;
  }
  </style>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
$(document).ready(function(){
    $("input").keyup(function(){
      $.post("/password", {password: $("#pwd").val()}, function(data, status){
        $(".center span").text(data);
        // if (!$('input').val()){$(".center span").text('')};
      });
    });
});
</script>
</head>
<body>

  <div class="middle">
    <h3>Password Strength Test!</h3>

    <div class="center">
      Enter your test password: <input id='pwd' type="text">
    <br>
    <br>
      <p>Password Strength: <span></span></p>
    </div>

  </div>


</body>
</html>
